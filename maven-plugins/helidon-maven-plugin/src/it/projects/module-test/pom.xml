<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.helidon.build-tools.module.tests</groupId>
    <artifactId>module-test</artifactId>
    <version>@project.version@</version>
    <name>Test Native Image With Module</name>
    <packaging>jar</packaging>

    <properties>
        <compiler.plugin.version>3.8.1</compiler.plugin.version>
        <jakarta.activation.version>2.1.0</jakarta.activation.version>
        <javax.annotation.version>1.2</javax.annotation.version>
        <jar.plugin.version>3.0.2</jar.plugin.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${compiler.plugin.version}</version>
                <configuration>
                    <release>11</release>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.helidon.build-tools</groupId>
                <artifactId>helidon-maven-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>graal</id>
                        <goals>
                            <goal>native-image</goal>
                        </goals>
                        <configuration>
                            <execMode>module</execMode>
                            <module>my.own.module/my.own.module.Main</module>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- profiles are needed to test module execution mode of GraalNativeMojo -->
    <profiles>
        <profile>
            <id>module-path</id>
            <dependencies>
                <dependency>
                    <groupId>jakarta.activation</groupId>
                    <artifactId>jakarta.activation-api</artifactId>
                    <version>${jakarta.activation.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>class-path</id>
            <dependencies>
                <dependency>
                    <groupId>javax.annotation</groupId>
                    <artifactId>javax.annotation-api</artifactId>
                    <version>${javax.annotation.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>test1</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.helidon.build-tools</groupId>
                        <artifactId>helidon-maven-plugin</artifactId>
                        <version>${project.version}</version>
                        <executions>
                            <execution>
                                <id>graal</id>
                                <goals>
                                    <goal>native-image</goal>
                                </goals>
                                <configuration>
                                    <execMode>module</execMode>
                                    <module>my.own.module</module>
                                    <mainClass>my.own.module.Main</mainClass>
                                    <classPath>
                                        <includes>
                                            <include>some/path/to/jar</include>
                                            <include>dummy/path</include>
                                        </includes>
                                        <excludes>
                                            <exclude>dummy/*</exclude>
                                        </excludes>
                                    </classPath>
                                    <modulePath>
                                        <includes>
                                            <include>target/classes</include>
                                        </includes>
                                    </modulePath>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>test2</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>${jar.plugin.version}</version>
                        <configuration>
                            <archive>
                                <index>true</index>
                                <manifestEntries>
                                    <mainClass>my.own.module.Main</mainClass>
                                </manifestEntries>
                            </archive>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>io.helidon.build-tools</groupId>
                        <artifactId>helidon-maven-plugin</artifactId>
                        <version>${project.version}</version>
                        <executions>
                            <execution>
                                <id>graal</id>
                                <goals>
                                    <goal>native-image</goal>
                                </goals>
                                <configuration>
                                    <execMode>module</execMode>
                                    <modulePath>
                                        <includes>
                                            <include>target/module-test-${project.version}.jar</include>
                                        </includes>
                                    </modulePath>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>test3</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.helidon.build-tools</groupId>
                        <artifactId>helidon-maven-plugin</artifactId>
                        <version>${project.version}</version>
                        <executions>
                            <execution>
                                <id>graal</id>
                                <goals>
                                    <goal>native-image</goal>
                                </goals>
                                <configuration>
                                    <execMode>none</execMode>
                                    <additionalArgs>
                                        <arg>--module</arg>
                                        <arg>my.own.module/my.own.module.Main</arg>
                                        <arg>--module-path</arg>
                                        <arg>target/classes</arg>
                                    </additionalArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

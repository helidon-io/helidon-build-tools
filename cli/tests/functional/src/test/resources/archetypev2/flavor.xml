<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-script-2.0.xsd"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <step name="Flavor" optional="true">
        <inputs>
            <enum id="flavor"
                  name="Select a Flavor"
                  default="mp"
                  global="true"
                  optional="true">
                <option value="mp"
                        name="Flavor 1"
                        description="A simple greet application">
                    <exec src="flavor1/flavor1.xml"/>
                </option>
                <option value="se"
                        name="Dummy archetype"
                        description="Nothing interesting there">
                    <exec src="flavor2/flavor2.xml"/>
                </option>
            </enum>
        </inputs>
    </step>
    <output>
        <model>
            <value key="flavor">${flavor}</value>
        </model>
    </output>
</archetype-script>
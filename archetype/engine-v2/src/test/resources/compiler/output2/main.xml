<archetype-script xmlns="https://helidon.io/archetype/2.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">

    <methods>
        <method name="multi-module">
            <output>
                <transformation id="t3">
                    <replace regex="^(.*)$" replacement="${module-dir}/$1"/>
                </transformation>
            </output>
        </method>
        <method name="single-module">
            <output>
                <transformation id="t3">
                    <replace regex="^(.*)$" replacement="$1"/>
                </transformation>
            </output>
        </method>
    </methods>
    <step name="Step1">
        <inputs>
            <boolean id="var1" name="Var1" />
            <boolean id="var2" name="Var2" />
            <boolean id="var3" name="Var3" />
            <boolean id="var4" name="Var4" />
            <boolean id="var5" name="Var5" />
        </inputs>
    </step>
    <call method="multi-module" if="${var1}" />
    <call method="single-module" if="!${var1}" />
    <output if="${var2}">
        <transformation id="t1">
            <replace regex=".hbs$" replacement=""/>
        </transformation>
        <transformation id="t2">
            <replace regex="__pkg__" replacement="${groupId/\./\/}"/>
        </transformation>
        <templates transformations="t1,t2,t3" if="${var3}">
            <directory>files</directory>
            <includes>
                <include if="${var4}">**/*.hbs</include>
                <include>template1.hbs</include>
            </includes>
            <excludes>
                <exclude if="${var5}">template2.hbs</exclude>
            </excludes>
        </templates>
    </output>
</archetype-script>

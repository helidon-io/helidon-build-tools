<archetype-script xmlns="https://helidon.io/archetype/2.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">
    <step name="Step1">
        <inputs>
            <enum id="i1" name="Input1">
                <option name="Option1" value="o1">
                    <presets>
                        <boolean path="~i2">false</boolean>
                    </presets>
                </option>
                <option name="Option2" value="o2">
                    <presets>
                        <boolean path="~i2">true</boolean>
                        <list path="~i3">
                            <value>o2</value>
                        </list>
                    </presets>
                </option>
                <option name="Option3" value="o3"/>
            </enum>
        </inputs>
    </step>
    <step name="Step2">
        <inputs>
            <boolean id="i2" name="Input2" global="true"/>
            <list id="i3" name="Input3" if="${i2}">
                <option name="Input2" value="o1"/>
                <option name="Input2" value="o2">
                    <inputs>
                        <text id="i4" name="Input4"/>
                    </inputs>
                </option>
            </list>
        </inputs>
    </step>
    <step name="Step3">
        <inputs>
            <text id="i5" name="Input5"/>
        </inputs>
    </step>
</archetype-script>

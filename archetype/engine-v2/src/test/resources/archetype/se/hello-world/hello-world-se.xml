<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-script-2.0.xsd">

    <context>
        <enum path="media-support.json.provider">jackson</enum>
        <enum path="tracing.provider">jaeger</enum>
        <boolean path="my-opt-out">false</boolean>
        <text path="my-input-text">foo</text>
    </context>
    <source src="../../common/java-files.xml"/>
    <exec src="../bare/bare-se.xml"/>
    <exec src="customize-hello-world.xml"/>
    <output>
        <model>
            <item id="readme-description">Minimal Helidon SE project suitable to start from scratch.</item>
            <list id="readme-section">
                <item order="20">
                    <![CDATA[
                    ## Exercise the application

                    ```
                    curl -X GET http://localhost:8080/greet
                    {"message":"Hello World!"}
                    ```

                    ## Try health and metrics

                    ```
                    curl -s -X GET http://localhost:8080/health
                    {"outcome":"UP",...
                    . . .

                    # Prometheus Format
                    curl -s -X GET http://localhost:8080/metrics
                    # TYPE base:gc_g1_young_generation_count gauge
                    . . .

                    # JSON Format
                    curl -H 'Accept: application/json' -X GET http://localhost:8080/metrics
                    {"base":...
                    . . .
                    ```
]]>
                </item>
            </list>
        </model>
    </output>
</archetype-script>

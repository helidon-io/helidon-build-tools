<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 file:/archetype.xsd">

    <if expr="${foo}">
        <presets>
            <if expr="${foo}">
                <text path="success1">success</text>
            </if>
        </presets>
    </if>
    <presets>
        <text path="outside1">success</text>
    </presets>
    <if expr="${bar}">
        <presets>
            <text path="failure1" if="${bar}">failure</text>
        </presets>
    </if>
    <else-if expr="${foo}">
        <presets>
            <text path="success2">success</text>
        </presets>
    </else-if>
    <presets>
        <text path="outside2">success</text>
    </presets>
    <if expr="${bar}">
        <presets>
            <text path="failure2" if="${bar}">failure</text>
        </presets>
    </if>
    <else-if expr="${bar}">
        <presets>
            <text path="failure3" if="${bar}">failure</text>
        </presets>
    </else-if>
    <else>
        <presets>
            <text path="success3">success</text>
        </presets>
    </else>
    <presets>
        <text path="outside3">success</text>
    </presets>
    <step name="step1">
        <help>my help</help>
        <if expr="${foo}">
            <if expr="${bar}"/>
            <else-if expr="${bar}"/>
            <else>
                <inputs>
                    <if expr="${bar} &amp;&amp; ${foo}">
                        <boolean id="foo" name="Foo">
                            <inputs>
                                <boolean id="foo" name="Foo"/>
                            </inputs>
                        </boolean>
                    </if>
                    <else-if expr="${bar}"/>
                    <else>
                        <boolean id="bool" name="Bool">
                            <if expr="${bar}"/>
                            <else-if expr="${foo} || ${bar}">
                                <step name="step2">
                                    <inputs>
                                        <boolean id="bool1" name="Bool"/>
                                    </inputs>
                                </step>
                            </else-if>
                        </boolean>
                    </else>
                </inputs>
            </else>
        </if>
    </step>
    <output>
        <model>
            <map key="map">
                <if expr="${foo}">
                    <map key="map1">
                        <if expr="${bar}">
                            <value key="foo">bar</value>
                        </if>
                        <else-if expr="${foo}">
                            <if expr="${bar}"/>
                            <else-if expr="${bar}">
                                <value key="foo">bar</value>
                            </else-if>
                            <else>
                                <value key="value">value1</value>
                            </else>
                        </else-if>
                    </map>
                </if>
            </map>
            <list key="list">
                <if expr="${foo}">
                    <list>
                        <if expr="${bar}">
                            <value>foo</value>
                        </if>
                        <else-if expr="${foo}">
                            <list>
                                <if expr="${bar}"/>
                                <else-if expr="${bar}">
                                    <value>bar</value>
                                </else-if>
                                <else>
                                    <value>value2</value>
                                </else>
                            </list>
                        </else-if>
                    </list>
                </if>
            </list>
        </model>
    </output>
</archetype-script>
